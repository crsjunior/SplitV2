<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:facebook="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@android:color/background_dark" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:background="@android:color/background_dark"
		android:gravity="center_horizontal"
		android:orientation="horizontal" >

		<com.facebook.widget.ProfilePictureView
			android:id="@+id/selection_profile_pic"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center_horizontal"
			facebook:preset_size="small" />

		<TextView
			android:id="@+id/selection_user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp"
			android:background="@android:color/background_dark"
			android:textColor="@android:color/white"
			android:textSize="18sp" />
	</LinearLayout>

	<ListView
		android:id="@+id/selection_list"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:background="@drawable/borda_botao_facebook" />

	<Button
		android:id="@+id/botao_concluir_escolha"
		android:layout_gravity="center"
		android:onClick="escolhaConcluida"
		android:background="@drawable/borda_botao_facebook"
		android:layout_width="wrap_content"
		android:textColor="@android:color/white"
		android:layout_height="wrap_content"
		android:text="@string/fragment_facebook_selection_button_concluir_escolha" />

</LinearLayout>