<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape android:shape="rectangle">

			<solid
				android:color="#ff333333" />

			<stroke
				android:width="1dp"
				android:color="#ff000000" />

			<corners
				android:radius="4dp" />

			<padding
				android:bottom="0dp"
				android:left="0dp"
				android:top="0dp"
				android:right="0dp" />
		</shape>
	</item>

	<item>
		<shape android:shape="rectangle">

			<solid
				android:color="#ff404040" />

			<stroke
				android:width="1dp"
				android:color="#ff000000" />

			<corners
				android:radius="4dp" />

			<padding
				android:bottom="0dp"
				android:left="0dp"
				android:top="0dp"
				android:right="0dp" />
		</shape>
	</item>

</selector>