<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#2A3D66" />

			<stroke
				android:width="1dp"
				android:color="#2A3D66"/>

			<padding
				android:bottom="6dp"
				android:left="6dp"
				android:right="6dp"
				android:top="6dp"/>

			<corners
				android:radius="6dp" />
		</shape>
	</item>

	<item>
		<shape>
			<solid
				android:color="#3F5C9A" />

			<stroke
				android:width="1dp"
				android:color="#2A3D66"/>

			<padding
				android:bottom="6dp"
				android:left="6dp"
				android:right="6dp"
				android:top="6dp"/>

			<corners
				android:radius="6dp" />
		</shape>
	</item>

</selector>