<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

	<item android:state_pressed="true">
		
		<shape>
			<solid
				android:color="@color/mineral_blues_azul_escuro_leve" />
			
			<stroke
				android:width="1dp"
				android:color="@color/mineral_blues_azul_escuro_forte"/>

			<padding
				android:bottom="6dp"
				android:left="6dp"
				android:right="6dp"
				android:top="6dp"/>
		</shape>
	</item>

	<item>
		<shape>
			<solid
				android:color="@color/mineral_blues_azul_claro_leve" />

			<stroke
				android:width="1dp"
				android:color="@color/mineral_blues_azul_claro_forte"/>

			<padding
				android:bottom="6dp"
				android:left="6dp"
				android:right="6dp"
				android:top="6dp"/>
		</shape>
	</item>

</selector>
